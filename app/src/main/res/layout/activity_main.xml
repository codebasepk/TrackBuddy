<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main_layout" >

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_material_light"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/info1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="7dp"
        android:textSize="12dp"
        android:text="All the SMS codes are case and character sensitive."
        android:textColor="#9C27B0"/>

    <TextView
        android:id="@+id/trackerSMSCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@+id/info1"
        android:layout_marginTop="16dp"
        android:typeface="serif"
        android:textSize="18dp"
        android:textStyle="bold"
        android:shadowColor="#B3000000"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2"
        android:textColor="#669900"/>

    <TextView
        android:id="@+id/sirenSMSCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/trackerSMSCode"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:typeface="serif"
        android:textSize="18dp"
        android:textStyle="bold"
        android:shadowColor="#B3000000"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2"
        android:textColor="#669900"/>

    <TextView
        android:id="@+id/speedSMSCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/sirenSMSCode"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:typeface="serif"
        android:textSize="18dp"
        android:textStyle="bold"
        android:shadowColor="#B3000000"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2"
        android:textColor="#669900"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="110dp"
        android:background="@drawable/logo_main"/>

    <ImageView
        android:background="@drawable/logo_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="28dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="8dp"
        android:textColor="#FF0000"
        android:textSize="12dp"
        android:text="Warning: Standard SMS charges may apply."/>

    <android.support.v4.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:id="@+id/content_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ListView android:id="@+id/drawer_list"
            android:layout_width="70dp"
            android:layout_height="319dp"
            android:layout_gravity="start"
            android:choiceMode="singleChoice"
            android:divider="#80000000"
            android:dividerHeight="4dp"
            android:background="@drawable/border_drawable"/>
    </android.support.v4.widget.DrawerLayout>

</RelativeLayout>


<RelativeLayout
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#E6212121"
android:id="@+id/top_layout">


<ImageView
    android:id="@+id/arrowImage"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:paddingLeft="5dp"
    android:paddingTop="15dp"
    android:src="@drawable/ic_arrow"/>


<TextView
    android:layout_below="@+id/arrowImage"
    android:id="@+id/textViewOne"
    android:layout_margin="30dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:text="Click this button or swipe from the left edge to open Settings Drawer"
    android:typeface="serif"
    android:textSize="18dp"
    android:textColor="@color/button_material_light"
    android:shadowColor="#000000"
    android:shadowDx="2"
    android:shadowDy="2"
    android:shadowRadius="4"
    />

</RelativeLayout>

</FrameLayout>
