<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@color/background_material_light">

    <Switch
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/switchTracker"/>

    <EditText
        android:layout_marginTop="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:longClickable="false"
        android:cursorVisible="false"
        android:inputType="textNoSuggestions"
        android:maxLength="10"
        android:layout_below="@+id/switchTracker"
        android:layout_centerHorizontal="true"
        android:hint="Replace Tracking Code."
        android:id="@+id/editTextTracker"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Apply"
        android:id="@+id/applyButtonTracker"
        android:layout_below="@+id/editTextTracker"
        android:layout_alignRight="@+id/editTextTracker"
        android:layout_alignEnd="@+id/editTextTracker"/>

</RelativeLayout>
