<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/background_material_light">

    <TextView
        android:id="@+id/speedInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:text="This feature reports the travelling speed of your device using Android GPS Service."
        android:textSize="12dp"/>

    <Switch
        android:layout_below="@+id/speedInfo"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/switchSpeed"/>


    <TextView
        android:layout_below="@+id/switchSpeed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="1dp"
        android:paddingBottom="2dp"
        android:textColor="#669900"
        android:textSize="10dp"
        android:text="Info: Speed accuracy varies with devices. Under normal conditions, accuracy range is Â±5 Km/h."/>

</RelativeLayout>
